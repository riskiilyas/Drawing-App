<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialog_shape"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/btnBrushLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/brush_large"
        app:layout_constraintBottom_toTopOf="@+id/btnBrushMedium"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/large_brush"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBrushMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/brush_medium"
        android:contentDescription="@string/medium_brush"
        app:layout_constraintBottom_toTopOf="@+id/btnBrushSmall"
        app:layout_constraintEnd_toEndOf="@+id/btnBrushLarge"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnBrushLarge"
        app:layout_constraintTop_toBottomOf="@+id/btnBrushLarge" />

    <ImageButton
        android:id="@+id/btnBrushSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/brush_small"
        android:contentDescription="@string/small_brush"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnBrushMedium"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnBrushMedium"
        app:layout_constraintTop_toBottomOf="@+id/btnBrushMedium" />

</androidx.constraintlayout.widget.ConstraintLayout>